@article{friston_dynamic_2003,
	title = {Dynamic causal modelling},
	volume = {19},
	issn = {10538119},
	url = {http://dx.doi.org/10.1016/j.neuroimage.2017.02.045 www.elsevier.com http://www.sciencedirect.com/science/article/pii/S1053811903002027%5Cnhttp://www.sciencedirect.com.gate1.inist.fr/science/article/pii/S1053811903002027%5Cnhttp://www.sciencedirect.com.gat},
