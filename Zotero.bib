	pages = {496},
	journaltitle = {Frontiers in Neuroscience},
	author = {Liu, Qian and Pineda-García, Garibaldi and Stromatias, Evangelos and Serrano-Gotarredona, Teresa and Furber, Steve B.},
	date = {2016-11},
	keywords = {Benchmarking, Evaluation, Vision Dataset, neuromorphic engineering, spiking neural networks}
}

