	keywords = {Animals, Bayes Theorem, Macaca mulatta, Male, Motion Perception, Motion Perception: physiology, Neural Networks (Computer), Photic Stimulation, Photic Stimulation: methods, Pursuit, Smooth, Smooth: physiology, Visual Perception, Visual Perception: physiology, bayesian, prior\_probability}
