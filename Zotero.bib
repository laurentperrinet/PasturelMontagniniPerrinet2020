	keywords = {Attention, Attention: physiology, Brain, Brain: anatomy \& histology, Brain: physiology, Brain: radionuclide imaging, Diagnostic Imaging, Emission-Computed, Face, Humans, Magnetic Resonance Imaging, Models, Motion Perception, Motion Perception: physiology, Neural Pathways, Neural Pathways: physiology, Neurological, Pattern Recognition, Psychophysics, Psychophysics: methods, Tomography, Visual, Visual: physiology}
