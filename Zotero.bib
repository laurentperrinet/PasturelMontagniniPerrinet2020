	author = {Churchland, Mark M and Chou, I-Han H and Lisberger, Stephen G},
	date = {2003},
	pmid = {12815015},
	keywords = {Animals, Blinking, Blinking: physiology, Macaca mulatta, Male, {MotionExtrapolation}, Photic Stimulation, Photic Stimulation: methods, Pursuit, Reaction Time, Reaction Time: physiology, Smooth, Smooth: physiology, khoei12jpp, spem}
