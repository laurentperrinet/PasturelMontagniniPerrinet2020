	journaltitle = {Journal of vision},
	author = {Dorr, Michael and Martinetz, Thomas and Gegenfurtner, Karl R. and Barth, Erhardt},
	date = {2010},
	keywords = {eye-movements, natural\_scenes}
}

@article{kriener_correlations_2008,
	title = {Correlations and population dynamics in cortical networks.},
