@article{foldiak_sparse_2002,
	title = {Sparse coding in the primate cortex},
	url = {http://citeseerx.ist.psu.edu/viewdoc/download?doi=10.1.1.16.1720&rep=rep1&type=pdf},
	doi = {10.1.1.16.1720},
	abstract = {Brain function can be seen as computation, i.e. the manipulation of information necessary for survival. {\textbackslash}{nComputation} itself is an abstract process but it must be performed or implemented in a physical system. {\textbackslash}{nAny} physical computing system, be it an electronic computer or a biological system consisting of neurons, {\textbackslash}nmust use some form of physical representation for the pieces of information that it processes. Computations {\textbackslash}nare implemented by the transformations of these physical representations of information. The brain receives {\textbackslash}ninformation via the sensory channels and must eventually generate an appropriate motor output. But before {\textbackslash}nwe can even study the transformations that are involved, we need at least some fundamental understanding {\textbackslash}nof the internal representation that these transformations operate on. Neurons represent and communicate {\textbackslash}ninformation mainly by generating (or `firing') a sequence of electrical impulses. Electrophysiological {\textbackslash}ntechniques exist for the recording of these impulses from isolated single neurons in the living brain. Single {\textbackslash}ncell recording has revealed a remarkably close and highly specific relationship between sensory stimuli, {\textbackslash}nneural activity, and behavioral reports of perceptual states. However, the encoding of events and states into {\textbackslash}na sequence of neural impulses in a large number of neurons can be highly complex, especially in the {\textbackslash}ncerebral cortex, which contains an elaborate working model of the world. One of the basic questions about {\textbackslash}nthis neural code is whether an information item (e.g. a specific sensory stimulus caused by an object) is {\textbackslash}nrepresented by the activity of a single, individually meaningful cell, or is it only the global activity pattern {\textbackslash}nacross a whole cell population that corresponds to interpretable states? There are now strong theoretical {\textbackslash}nreasons and experimental evidence suggesting that the brain adopts a compromise between these extremes, {\textbackslash}nusing a relatively small (though in absolute number still substantial) subset of neurons to represent each {\textbackslash}nitem. This is often referred to as sparse coding (Dayan and Abbott, 2001).},
