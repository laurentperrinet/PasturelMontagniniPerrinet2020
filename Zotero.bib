	pages = {114--132},
	number = {1},
	journaltitle = {Neuropsychopharmacology},
	author = {Rogers, Robert D.},
	date = {2011},
	note = {bibtex: Rogers2011 
bibtex[isbn=1740-634X (Electronic){\textbackslash}n0006-3223 (Linking);publisher=Nature Publishing Group;mendeley-groups=biblio thesis;pmid=20881944]},
	keywords = {choice, dopamine, psychiatry and behavioral sciences, serotonin, social, value}
}

