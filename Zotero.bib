@article{de_berker_computations_2016,
	title = {Computations of uncertainty mediate acute stress responses in humans},
	volume = {7},
	issn = {2041-1723},
	url = {http://www.nature.com/ncomms/2016/160329/ncomms10996/full/ncomms10996.html http://www.ncbi.nlm.nih.gov/pubmed/27020312 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4820542},
