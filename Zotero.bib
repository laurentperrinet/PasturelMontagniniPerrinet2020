@article{wilson_mixture_2013,
	title = {A Mixture of Delta-Rules Approximation to Bayesian Inference in Change-Point Problems},
	volume = {9},
	url = {http://www.princeton.edu/$\sim$rcw2/papers/WilsonEtAl_PLOSCompBiol2013.pdf},
