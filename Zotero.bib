bibtex[isbn=1662-5161;mendeley-groups=biblio thesis;pmid=23404628;bdsk-url-2=https://dx.doi.org/10.3389/fnhum.2012.00359]},
	keywords = {Bayesian surprise, P300, bayesian surprise, digital, digital filtering, event-related brain potentials, p300, predictive surprise, single trial {EEG}, single trial eeg}
}

