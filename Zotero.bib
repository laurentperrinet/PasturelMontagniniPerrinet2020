	pages = {1--33},
	number = {6},
	journaltitle = {{PLoS} Computational Biology},
	author = {Eggert, Thomas and Robinson, Farrel R. and Straube, Andreas},
	date = {2016},
	pmid = {27351741}
}

@article{duan_rl$^2$:_2016,
