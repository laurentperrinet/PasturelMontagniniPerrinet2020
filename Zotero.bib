	keywords = {Bayesian, Generative models, Inference, Information theory, Predictive coding, bayesian, classical receptive field, cortical areas, generative models, hierarchical organization, hierarchical\_model, inference, information theory, macaque monkey, neural networks, predictive coding, principal component analysis, semantic memory, shape perception, single neurons, temporal visual cortex}
