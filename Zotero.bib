	keywords = {Algorithms, Animals, Cluster Analysis, Computational Biology, Discriminant Analysis, Haplorhini, Models, Multivariate Analysis, Neurological, Neurons, Neurons: cytology, Neurons: physiology, Ocular, Ocular: physiology, Semantics, Temporal Lobe, Temporal Lobe: cytology, Temporal Lobe: physiology, Vision}
